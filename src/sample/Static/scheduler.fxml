<VBox prefHeight="450.0" prefWidth="750.0" stylesheets="@flatbee.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ScheduleController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
          <Menu mnemonicParsing="false" text="Options">
              <MenuItem mnemonicParsing="false" onAction="#fileLocation" text="Go to file location..." />
              <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#closeProgram" text="Quit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
              <MenuItem mnemonicParsing="false" onAction="#gitReadMe" text="Go to Documentation" />
          </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" minHeight="-Infinity" minWidth="-Infinity" prefWidth="750.0" VBox.vgrow="ALWAYS">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2188ffc4" height="434.0" layoutY="-4.0" opacity="0.36" stroke="BLACK" strokeType="INSIDE" width="750.0" />
            <Rectangle fx:id="timeRectangle" arcHeight="5.0" arcWidth="5.0" fill="#2ecc71" height="30.0" layoutX="50.0" layoutY="312.0" opacity="0.9" stroke="BLACK" strokeType="INSIDE" visible="false" width="303.0" />
            <Rectangle fx:id="energyRectangle" arcHeight="5.0" arcWidth="5.0" fill="#ffea2c" height="97.0" layoutX="363.0" layoutY="171.0" stroke="BLACK" strokeType="INSIDE" visible="false" width="186.0" />
            <Separator layoutX="-15.0" layoutY="396.0" prefHeight="6.0" prefWidth="765.0" />
            <TextArea editable="false" layoutX="44.0" layoutY="30.0" prefHeight="88.0" prefWidth="670.0" text="*Select the number of jobs to be created from the ComboBox below. &#10;The program will auto generate the jobs from a psuedorandom number generator and schedule them accordingly." wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </TextArea>
            <ComboBox fx:id="jobCombo" layoutX="44.0" layoutY="171.0" onAction="#activateButton" onMouseClicked="#newTask" prefHeight="27.0" prefWidth="121.0" />
            <Button fx:id="submitButton" defaultButton="true" disable="true" layoutX="187.0" layoutY="235.0" mnemonicParsing="false" onAction="#chosenJobs" prefHeight="30.0" prefWidth="163.0" text="Submit">
               <font>
                  <Font name="SansSerif Regular" size="13.0" />
               </font></Button>
            <ProgressBar fx:id="progressBar" layoutX="50.0" layoutY="352.0" prefHeight="19.0" prefWidth="303.0" progress="0.0" visible="false" />
            <Label layoutX="44.0" layoutY="146.0" text="Number of Jobs">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Label>
            <ProgressIndicator fx:id="progressIndicator" layoutX="361.0" layoutY="344.0" progress="0.0" visible="false" />
            <Label fx:id="timeTakenLbl" layoutX="108.0" layoutY="319.0" prefHeight="17.0" prefWidth="199.0" />
            <ComboBox fx:id="fileChoiceCombo" layoutX="44.0" layoutY="238.0" onAction="#activateButton" onMouseClicked="#newTask" prefHeight="27.0" prefWidth="121.0" />
            <Label layoutX="44.0" layoutY="215.0" text="File format">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="filesTextArea" editable="false" layoutX="564.0" layoutY="173.0" prefHeight="158.0" prefWidth="150.0" />
            <Button fx:id="deleteButton" disable="true" layoutX="599.0" layoutY="339.0" mnemonicParsing="false" onAction="#deleteFiles" text="Delete Files" />
            <Label layoutX="564.0" layoutY="146.0" text="List of Files">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="timeLabel" alignment="CENTER_RIGHT" layoutX="602.0" layoutY="402.0" prefHeight="16.0" prefWidth="138.0" textAlignment="RIGHT">
               <font>
                  <Font name="Arial" size="13.0" />
               </font></Label>
            <ComboBox fx:id="pMinCombo" layoutX="186.0" layoutY="171.0" onAction="#activateButton" onMouseClicked="#clearPMax" prefHeight="27.0" prefWidth="70.0" />
            <Label layoutX="187.0" layoutY="146.0" text="pMin">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label layoutX="278.0" layoutY="146.0" text="pMax">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="pMaxCombo" disable="true" layoutX="277.0" layoutY="171.0" onAction="#activateButton" onMouseClicked="#injectPMaxCombo" prefHeight="27.0" prefWidth="70.0" />
            <Label fx:id="energyLabel" layoutX="371.0" layoutY="166.0" prefHeight="103.0" prefWidth="178.0">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
            </Label>
         </children>
    </AnchorPane>
  </children>
</VBox>
